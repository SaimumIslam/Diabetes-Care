<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context="com.example.foysal.diabetis.HIFollowUpNotificationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_height="match_parent">


            <TextView
                android:gravity="left"
                android:textSize="22dp"
                android:paddingLeft="10dp"
                android:textColor="@color/hi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow-up visits will help to" />
    <TextView
        android:id="@+id/followUp"
        android:gravity="left"
        android:textSize="20dp"
        android:paddingLeft="30dp"
        android:textColor="@color/hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\no	Readjust your medication (oral drug/ insulin), diet and physical exercise. Readjustment is required because of weight change of a person or seasonal temperature change.
\no	Prevent Diabetes Complications by detect very early stages.
\no	Increase the compliance of diabetes management.
" />
            <TextView
                android:id="@+id/now"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have to go to doctor today to checkup your self to the hospital" />

            <TextView
                android:id="@+id/next"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="20dp"
                android:textColor="@color/hi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have to go to doctor Tomorrow to checkup your self  to the hospital" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
